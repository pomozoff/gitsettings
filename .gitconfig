[user]
    name = Anton Pomozov
    email = pomozoff@gmail.com
[core]
    excludesfile = ~/.gitignore_global
    quotepath = false
[i18n]
    commitencoding = utf8
    logoutputencoding = utf8
[alias]
    st   = status
    ca   = commit -am
    cm   = commit -m
    br   = branch
    co   = checkout
    df   = diff
    lg   = log -p
    pso  = push origin
    plo  = pull origin
    plro = pull --rebase origin
[color]
    diff        = true
    grep        = true
    status      = true
    interactive = true
    ui          = true
[commit]
    template = ~/.commit-template
[credential]
    helper = cache --timeout=3600
[github]
    user = pomozoff
    token =
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
